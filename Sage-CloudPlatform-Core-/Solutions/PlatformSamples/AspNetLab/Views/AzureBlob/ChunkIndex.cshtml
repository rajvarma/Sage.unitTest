@using AspNetLab.Helpers

@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/Plupload/plupload.js"></script>
<script src="~/Scripts/Plupload/jquery.ui.plupload/jquery.ui.plupload.js"></script>
<script src="@Url.Content("~/Scripts/Plupload/jquery.ui.plupload/jquery.ui.plupload.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Plupload/plupload.html4.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Plupload/plupload.html5.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Plupload/plupload.flash.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Plupload/Unminified/plupload.silverlight.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Scripts/Plupload/jquery.ui.plupload.css")" rel="stylesheet" type="text/css" />

<p><b>Chunk Blob Test</b></p>
<div>
    @if (ViewBag.IsUploaded == null || !ViewBag.IsUploaded)
    {
        @Html.Partial("Partials/_UploadChunk")
        if (ViewBag.HasUploadError != null && ViewBag.HasUploadError == true)
        {
            @Html.Partial("Partials/_UploadError")
        }
        if (ViewBag.IsDeleted != null)
        {
            @(ViewBag.IsDeleted == true ? Html.Partial("Partials/_ShowDeleteSuccess") : Html.Partial("Partials/_ShowDeleteError"))
        }
    }
    else if (ViewBag.IsUploaded == true)
    {
        @Html.Partial("Partials/_DownloadFile")        
    }
</div>

@Html.MarkDown("ChunkBlobStore_Index")